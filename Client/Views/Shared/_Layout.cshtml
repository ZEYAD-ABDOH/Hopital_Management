
@{
    var rol = Context.Session.GetString("Role");
}


<!DOCTYPE html>
<html lang="" >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Client</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/feather.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <style>


        /* التأكد من أن المودال يظهر فوق العناصر الأخرى */
        .modal {
            z-index: 1050; /* قيمة أعلى */
        }

        /* خلفية المودال */
        .modal-backdrop {
            z-index: 1040; /* قيمة أقل */
        }

        /* تخصيص الأنماط للمودال */
        .modal-dialog-custom {
            max-width: 600px; /* عرض المودال */
        }

        .modal-content-custom {
            border-radius: 10px; /* زوايا دائرية */
        }

        .modal-header-custom {
            background-color: #f8f9fa; /* لون خلفية رأس المودال */
        }

        .modal-body-custom {
            padding: 20px; /* مسافة داخلية */
        }

        .modal-title-custom {
            color: #343a40; /* لون العنوان */
            font-weight: bold; /* خط عريض */
        }

        .modal-close-button {
            border: none; /* بدون حدود */
            background: transparent; /* بدون خلفية */
            color: #dc3545; /* لون الزر */
        }

        .modal-secondary-button {
            background-color: #6c757d; /* لون الزر الثانوي */
            color: white; /* لون النص */
        }

    </style>
    
</head>


<body themebg-pattern="theme1">

