@model IEnumerable<asw.Model.Doctor>

@{
    ViewData["Title"] = "Index";
}

<div class="pcoded-content" id="editModal" aria-labelledby="editModalLabel">
    <div class="main-body">

        <div class="page-wrapper">
            <div cite="page-body">
                <div class="card">
                    <div class="card-header">
                        <h5>Doctor Info</h5>
                    </div>

                    <div class="modal-body modal-body-custom" id="editPartialContainer">
                        <!-- سيتم تحميل النموذج هنا -->


                    </div>

                    <div class="my-2 px-3">


                        <p>
                            <a asp-action="Create" class="btn-outline-success p-2">Create New</a>
                        </p>
                    </div>

                    <div class="card-block">
                        <div class="table-responsive">
<table class="tab le">
    @if (TempData["erorr"] != null)
    {
        <div class="alert alert-danger">

            @TempData["erorr"]

        </div>
    }
    <thead>
        <tr>

            <th>


                                            <a onclick="showCreatDialog()">
                                                <img src="@Url.Content("~/imgs/add.png")" class="btn btn-primary waves-effect waves-light add" />
                                            </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartlID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartlID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID  }) |
                      <a asp-action="Delete1" class="btn btn-danger" asp-route-id="@item.ID">Delete</a>
               
            </td>
        </tr>
}
    </tbody>
</table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function showCreatDialog() {
        $.ajax({
            url: '/Doctor/Create',
            type: 'GET',
            success: function (result) {
                $('#editPartialContainer').html(result);
                $('#editModal').modal('show');
            }

        });
    }
</script>